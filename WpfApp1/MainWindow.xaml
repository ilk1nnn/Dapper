<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid Height="350" SelectionChanged="myDataGrid_SelectionChanged" Name="myDataGrid">
            
        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" Name="Name" FontSize="25"></TextBox>
            <Slider  Width="200" VerticalAlignment="Center" Name="Score" Minimum="0" Maximum="100" FontSize="25"></Slider>
            <CheckBox  Width="200" Name="IsStar" FontSize="25" Content="IsStar"></CheckBox>
            <Button Click="Button_Click" Margin="10" FontSize="20" Content="Update"></Button>
        </StackPanel>
    </StackPanel>
</Window>
